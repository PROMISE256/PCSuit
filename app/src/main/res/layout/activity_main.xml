<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Welcome Message -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:background="@drawable/headerbkg"/>

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to PulseCare"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <!-- Motivational Word -->
    <TextView
        android:id="@+id/textViewMotivation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empowering Health, Inspiring Life"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_below="@id/textViewWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Patient Login Button -->
    <Button
        android:id="@+id/buttonPatientLogin"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Patient"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/bgcolor"
        android:layout_below="@id/textViewMotivation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <!-- Doctor Login Button -->
    <Button
        android:id="@+id/buttonDoctorLogin"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Doctor"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/bgcolor"
        android:layout_below="@id/buttonPatientLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <!-- Admin Use Text -->
    <TextView
        android:id="@+id/textViewAdminUse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Use"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
